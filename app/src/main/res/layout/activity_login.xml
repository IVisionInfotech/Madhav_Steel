<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/steel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTransDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logo_white" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.madhavsteel.views.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Login with Discountspoon"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/white_border"
                                android:hint="Enter Mobile Number"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/whiteGray"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                        <com.madhavsteel.views.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:text="Enter 4 Digit Pin"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_50sdp"
                            android:layout_marginRight="@dimen/_50sdp"
                            android:orientation="horizontal">

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etPin11"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@drawable/pin_box_login"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etPin12"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@drawable/pin_box_login"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etPin13"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@drawable/pin_box_login"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etPin14"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@drawable/pin_box_login"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                        <com.madhavsteel.views.MyTextViewSemiBold
                            android:id="@+id/tvLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:background="@drawable/white_background"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/_10sdp"
                            android:text="Login"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp">

                            <com.madhavsteel.views.MyTextView
                                android:id="@+id/tvForgotPin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Forgot Pin?"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/gray_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp">

                        <com.madhavsteel.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account?"
                            android:textColor="@color/whiteGray"
                            android:textSize="@dimen/_13sdp" />

                        <com.madhavsteel.views.MyTextView
                            android:id="@+id/tvSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Sign Up"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
